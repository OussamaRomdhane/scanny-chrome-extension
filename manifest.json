{
	"name": "Scanny",
	"version": "1.0",
	"manifest_version": 2,
	"description": "An easy way to get a link into your smartphone",
	"icons": {
		"16": "scanny_icon_16.png",
		"48": "scanny_icon_48.png",
		"128": "scanny_icon_128.png"
	},
	"browser_action": {
		"default_action": {
			"16": "scanny_icon_16.png",
			"24": "scanny_icon_24.png",
			"32": "scanny_icon_32.png"
		},
		"default_title": "Scanny",
		"default_popup": "popup.html"
	},
	"permissions": ["activeTab", "tabs"]
}
